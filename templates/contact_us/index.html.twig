{% extends 'base.html.twig' %}

{% block title %}Обратная связь{% endblock %}
{% block body %}
<!-- Page Header Start -->
<section class="page-header">
    <h2 class="page-title color--white">СВЯЖИТЕСЬ С НАМИ</h2>
</section>
<!-- Page Header End -->

<!-- Breadcumb area Start -->
<div class="breadcumb-area section-padding">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <ul class="breadcumb">
                    <li class="breadcumb__list"><a class="breadcumb__link" href="{{ path('home_page') }}">Главная страница</a></li>
                    <li class="breadcumb__list"><a class="breadcumb__link current" href="{{ path('contact_us') }}">Свяжитесь с нами</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- Breadcumb area End -->

<!-- Main content wrapper Start -->

<div class="main-content-wrapper">
    <!-- Contact Us area Start -->
    <section class="contact-area section-padding">
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-4">
                    <div class="store-info">
                        <h4>Информация о магазине</h4>
                        <div class="store-info__item">
                            <i class="fa fa-map-marker"></i>
                            <div class="store-info__data">
                                <p>Kobe - Responsive Prestashop Theme <br> United States</p>
                            </div>
                        </div>
                        <div class="store-info__item">
                            <i class="fa fa-phone"></i>
                            <div class="store-info__data">
                                <p>Позвоните нам: <br> <a href="tel:+123.456.789">+123.456.789</a></p>
                            </div>
                        </div>
                        <div class="store-info__item">
                            <i class="fa fa-envelope"></i>
                            <div class="store-info__data">
                                <p>Email: <br> <a href="mailto:demo@posthemes.com">demo@posthemes.com</a></p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6">
                    <div class="form-box">
                        <div class="section-title">
                            <h2>Свяжитесь с нами</h2>
                        </div>
                            {% for massage in app.flashes('info') %}
                                <div class="form__group row">
                                    {{ massage }}
                                </div>
                            {% endfor %}

                            {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'form-inline form-horizontal'}}) }}
                                    <div class="form__group row">
                                        <div class="col-lg-8 col-12 ">
                                            {{ form_row(form.name, {'label': 'Имя', 'label_attr':{'class': 'control-label col-sm-3'}, 'attr':{'class': 'col-9'} }) }}
                                        </div>
                                        <br><br><br>
                                        <div class="col-lg-8 col-12">
                                    {{ form_row(form.Email, {'label': 'Email', 'label_attr':{'class': 'control-label col-sm-3'}, 'attr':{'class': 'col-9'}}) }}
                                        </div>
                                        <br><br><br>
                                            <div class="col-lg-8 col-12">
                                    {{ form_row(form.subject, {'label': 'Товар', 'label_attr':{'class': 'control-label col-sm-3'}, 'attr':{'class': 'col-9'}}) }}
                                            </div>
                                        <br><br><br>
                                                <div class="col-lg-8 col-12">
                                    {{ form_row(form.massage, {'label': 'Сообщение', 'label_attr':{'class': 'control-label col-sm-3'}, 'attr':{'class': 'col-9'}})}}
                                </div>
                            </div>
                            {{ form_widget(form) }}
                            <div class="form-group row">
                            <div class="col-12 offset-sm-11">
                                <button type="submit" class="btn add-to-cart btn-style-7">Отправить</button>
                            </div>

                            {{ form_end(form) }}
                            </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
{% endblock %}