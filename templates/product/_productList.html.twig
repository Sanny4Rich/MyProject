{% for product in products %}
    <div class="col-sm-3">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">{{ product.name }}</h5>
                <p class="card-text">{{ product.description|replace({';':"\n"})|nl2br }}</p>
                <a href="{{ path('products_item', {'id': product.id}) }}" class="btn btn-primary ">Подробнее</a>
                <a href="{{ path('orders_add_to_cart', {'id': product.id}) }}" class="btn btn-primary js-add-to-cart")>
                    Добавить в корзину
                </a>
            </div>
            <div class="card-footer">
                {{ (product.price/100)|localizedcurrency('UAH') }}
            </div>
        </div>
    </div>
{% endfor %}